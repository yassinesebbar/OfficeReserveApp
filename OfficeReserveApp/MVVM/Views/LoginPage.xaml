<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OfficeReserveApp.MVVM.Views.LoginPage"
             BackgroundColor="White"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             Title="LoginPage">
    <VerticalStackLayout VerticalOptions="Center">
        <Entry Placeholder="username" Text="{Binding loginRequest.UserName}"/>
        <Entry Placeholder="password" Text="{Binding loginRequest.Password}"/>
        <Button Text="Login" BackgroundColor="Black"
                TextColor="White"
                Command="{Binding LoginCommand}"/>

    </VerticalStackLayout>
</ContentPage>